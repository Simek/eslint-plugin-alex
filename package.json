{
  "name": "eslint-plugin-alex",
  "version": "1.0.0",
  "description": "ESLint plugin that integrates alex to surface potentially insensitive wording found in markdown files, comments and strings.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "alex",
    "inclusive-language"
  ],
  "author": "Simek",
  "repository": "github:Simek/eslint-plugin-alex",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "bun rm dist",
    "lint": "bunx eslint .",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "prepublish": "bun run clean && bun run build && bun run test",
    "release:dry-run": "bun --env-file=.env semantic-release --dry-run"
  },
  "peerDependencies": {
    "alex": "^11.0.1",
    "eslint": ">=8.56.0 || >=9.0.0 || >= 10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.4",
    "@types/bun": "^1.3.9",
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-mdx": "^3.6.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "bun": ">=1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
